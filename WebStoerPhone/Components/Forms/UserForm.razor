@page "/userform"

<div class="form-user-container">
    <h2>نموذج التسجيل</h2>
    <form>
        <div class="form-group">
            <label for="fullName">الاسم الكامل</label>
            <input type="text" id="fullName" placeholder="أدخل اسمك الكامل" />
        </div>
        <div class="form-group">
            <label for="phoneNumber">رقم الهاتف</label>
            <input type="text" id="phoneNumber" placeholder="أدخل رقم هاتفك" />
        </div>
        <div class="form-group">
            <label for="email">البريد الإلكتروني</label>
            <input type="email" id="email" placeholder="أدخل بريدك الإلكتروني" />
        </div>
        <div class="form-group">
            <label for="password">الرمز السري</label>
            <input type="password" id="password" placeholder=" دخل الرمز السري" />
        </div>
        <button type="submit">إرسال</button>
    </form>
</div>

